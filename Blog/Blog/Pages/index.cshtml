<div class="slider_main_container" style="min-width: 100%;">
    
    <div id="carouselExampleIndicators" style="z-index: 1; position:relative; width: 100%; " class="carousel slide" data-bs-ride="carousel">
        <div class="carousel-indicators">
            <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
            <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="1" aria-label="Slide 2"></button>
            <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="2" aria-label="Slide 3"></button>
            <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="3" aria-label="Slide 4"></button>
            <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="4" aria-label="Slide 5"></button>
            <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="5" aria-label="Slide 6"></button>
        </div>
        <div class="carousel-inner">
            <div class="carousel-item active">

                <div class="first_slide_1_carusel">
                    <a href="#" class="text_slide_carusel">
                        <h3> Porsche Golf Cup 2021 Національний Фінал</h3>
                    </a>
                </div>
            </div>
            <div class="carousel-item">
                <div class="first_slide_2_carusel">
                    <a href="#" class="text_slide_carusel">
                        <h3>Porsche Macan<br />Найспекотніша пропозиція* цього літа!</h3>

                    </a>
                </div>
            </div>
            <div class="carousel-item">
                <div class="first_slide_3_carusel">
                    <a href="#" class="text_slide_carusel">
                        <h3>Кредитна лінія EU4Business-EBRD.<br />До 10 % кешбеку від суми фінансування.</h3>
                    </a>
                </div>
            </div>
            <div class="carousel-item">
                <div class="first_slide_4_carusel">
                    <a href="#" class="text_slide_carusel">
                        <h3>Зустрічайте новий Porsche Taycan Cross Turismo</h3>
                    </a>
                </div>
            </div>
            <div class="carousel-item">
                <img src="https://porsche.ua/images/doc/e/7/e74ebf7-1536----590-px-2.jpg?" class="d-block w-100" alt="...">
            </div>
            <div class="carousel-item">
                <img src="https://porsche.ua/images/doc/8/9/8945790-1536----590-px-3.jpg?" class="d-block w-100" alt="...">
            </div>
        </div>
        <button class="carousel-control-prev prev_icon_carusel" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>
</div>

<div style="width: 100%;" class="d-flex flex-column flex-wrap w-100 justify-content-center align-items-center">
    <h2 style="margin-top: 15px; font-family: sans-serif;" >Модельный ряд</h2>
</div>

   
<div class="card_flex_container">
    @foreach (var article in Model.DisplayArticle)
    {
        <div class="Porsche_cart" style="background-image: url('@article.Img_url')">
            <div class="Cart_Title_Car">
                <sapn class="title_text_cart">@article.Title</sapn><br />
                <span style="margin-left: 20px;" class="prise_text">ореентированая цена от 2 391 320*</span>
            </div>
            <div style="margin-bottom: 10px;" class="btn_flex-container d-flex flex-row flex-wrap justify-content-start align-items-end">
                <a style="margin-bottom: 10px; margin-right: 7px;" href="/DopInfo/@article.ArticleId" class="btn_configur_div">
                    Конфигурация
                </a>
                <a style="margin-bottom: 10px" href="/DopInfo/@article.ArticleId" class="btn_details_div">
                    Детали
                </a>
            </div>
        </div>
    }
</div>




