@page
@model Blog.Pages.CreateModel
@{
}
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<div class="d-flex flex-column flex-wrap w-100 justify-content-center align-content-center">
    <h2>Create new Porsche</h2>
    <form method="post">
        <div class="input-group">
            <label asp-for="Article.Title" class="control-label"></label>
            <input asp-for="Article.Title" class="form-control" />
        </div>
        <div class="input-group">
            <label asp-for="Article.Title_Body_text" class="control-label"></label>
            <input asp-for="Article.Title_Body_text" class="form-control" />
        </div>
        <div class="input-group">
            <label asp-for="Article.Body_text" class="control-label"></label>
            <input asp-for="Article.Body_text" class="form-control" />
        </div>
        <div class="input-group">
            <label asp-for="Article.Img_url" class="control-label"></label>
            <input asp-for="Article.Img_url" class="form-control" />
        </div>
        <div class="input-group">
            <label asp-for="Article.Video_url" class="control-label"></label>
            <input asp-for="Article.Video_url" class="form-control" />
        </div>
        <div class="form-group">
            <input type="submit" value="Create" class="btn btn-primary" />
        </div>
    </form>
</div>